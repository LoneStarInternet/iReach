<h1>Listing users</h1>

<table class="list" border="0" cellpadding="0" cellspacing="0">
  <tr class="title">
    <td>First Name</td>
    <td>Last Name</td>
    <td>Email</td>
    <td colspan="2">Actions</td>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('odd','even') %>">
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: :button %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: :button %></td>
  </tr>
<% end %>
</table>

<br />

<%= content_for :page_navigation do %>
<div>
  <%= will_paginate @users %>
  <%= link_to 'New User', new_user_path, class: :button %>
</div>
<% end %>
